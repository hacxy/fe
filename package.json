{
  "name": "@hacxy/create-fe",
  "type": "module",
  "version": "0.0.0",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.12.3",
  "description": "",
  "author": {
    "name": "Hacxy",
    "email": "hacxy.js@outlook.com",
    "url": "https://hacxy.cn"
  },
  "license": "MIT",
  "keywords": [],
  "bin": {
    "create-fe": "./dist/index.js"
  },
  "scripts": {
    "stub": "tsdown",
    "build": "tsdown --clean --minify",
    "watch": "tsdown --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:all": "pnpm -r run lint",
    "lint:all:fix": "pnpm -r run lint:fix",
    "lint:staged": "eslint --fix",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@hacxy/bump": "^0.1.0",
    "@hacxy/eslint-config": "^0.4.1",
    "@hacxy/tsconfig": "^0.1.0",
    "czg": "^1.12.0",
    "eslint": "^9.32.0",
    "lint-staged": "^16.1.2",
    "simple-git-hooks": "^2.13.0",
    "tsdown": "^0.13.0",
    "typescript": "^5.8.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node scripts/commit-msg.mjs"
  },
  "lint-staged": {
    "*": [
      "npm run lint:staged"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": false
    }
  }
}